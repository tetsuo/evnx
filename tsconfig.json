{
	"version": "2.2.1",
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"outDir": "lib",
		"target": "es5",
		"jsx": "react",
		"experimentalDecorators": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"suppressImplicitAnyIndexErrors": true,
		"strictNullChecks": true
	},
	"include": [
		"src/index.ts",
		"src/cmd.ts",
		"src/test/*.ts",
		"src/ide/main.tsx",
		"src/net/**/*.ts",
		"src/storage/**/*.ts"
	]
}