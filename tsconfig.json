{
	"version": "2.2.1",
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"outDir": "lib",
		"target": "es5",
		"jsx": "react",
		"experimentalDecorators": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"suppressImplicitAnyIndexErrors": true,
		"strictNullChecks": true
	},
	"include": [
		"src/**/test/*.ts",
		"src/lang/index.ts",
		"src/lang/cmd.ts",
		"src/net/*.ts",
		"src/structs/*.ts",
		"src/storage/*.ts",
		"src/ide/main.tsx"
	]
}